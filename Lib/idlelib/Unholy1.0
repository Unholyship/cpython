import time

# function to print text slowly
def print_slow(text):
    for character in text:
        print(character, end='', flush=True)
        time.sleep(0.05)
    print()

# game introduction
print_slow("Welcome to Adventure Game!\n")
print_slow("You find yourself standing at the entrance of a dark cave.\n")

# player input
while True:
    choice = input("Would you like to enter the cave? (y/n): ")
    if choice.lower() == 'y':
        print_slow("You enter the cave.\n")
        break
    elif choice.lower() == 'n':
        print_slow("You decide not to enter the cave and go home.\n")
        exit()
